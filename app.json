{
  "expo": {
    "name": "SpendyFly",
    "slug": "spendy-fly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/ios-light.png",

    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#EEF5F1"
      },
      "icon": "./app/assets/ios-light.png",
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.sofronijev.spendyFly"
    },
    "web": {
      "favicon": "./app/assets/adaptive-icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "f7b6fc89-b26b-4461-9157-a03bb59cbfc3"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "image": "./app/assets/splash-icon.png",
          "backgroundColor": "#EEF5F1",

          "dark": {
            "backgroundColor": "#162A26"
          },

          "imageWidth": 220
        }
      ]
    ]
  }
}
